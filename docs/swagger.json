        ],
        "summary": "Get all series in the system",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "The series's name",
            "type": "string"
          },
          {
            "name": "generationId",
            "in": "query",
            "description": "The series's generation",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Series"
              }
            }
          },
          "422": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "email",
        "password",
        "name"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true,
          "description": "The user's email address"
        },
        "password": {
          "type": "string",
          "minLength": 6,
          "description": "The user's password"
        },
        "name": {
          "type": "string"
        },
        "birthDate": {
          "type": "string",
          "format": "date-time",
          "description": "The user's birth date"
        },
        "avatar": {
          "type": "string",
          "description": "Path of the user's avatar"
        },
        "role": {
          "type": "integer",
          "default": 0,
          "description": "The user's role. Can be 'dealer'(0) or 'admin'(1)"
        },
        "dealerships": {
          "type": "array",
          "description": "The user's dealerships.",
          "items": {
            "$ref": "#/definitions/Dealership"
          }
        }
      }
    },
    "UserLogin": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": { "$ref": "#/definitions/User/properties/email" },
        "password": { "$ref": "#/definitions/User/properties/password" }
      }
    },
    "LoggedInUser": {
      "properties": {
        "email": { "$ref": "#/definitions/User/properties/email" },
        "avatar": { "$ref": "#/definitions/User/properties/avatar" },
        "role": { "$ref": "#/definitions/User/properties/role" }
      }
    },
    "UserRegistration": {
      "required": [
        "email",
        "password",
        "name"
      ],
      "properties": {
        "email": { "$ref": "#/definitions/User/properties/email" },
        "password": { "$ref": "#/definitions/User/properties/password" },
        "name": { "$ref": "#/definitions/User/properties/name" },
        "birthDate": { "$ref": "#/definitions/User/properties/birthDate" },
        "avatar": { "$ref": "#/definitions/User/properties/avatar" }
      }
    },
    "Make": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "description": "The make's name.",
          "type": "string",
          "uniqueItems": true
        },
        "models": {
          "type": "array",
          "description": "The make's associated models.",
          "items": {
            "$ref": "#/definitions/Model"
          }
        }
      }
    },
    "CreateMake": {
      "required": [
        "name"
      ],
      "properties": {
        "name": { "$ref": "#/definitions/Make/properties/name" }
      }
    },
    "Model": {
      "required": [
        "name",
        "make"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The model's name.",
          "uniqueItems": true
        },
        "make": {
          "description": "The model's make.",
          "$ref": "#/definitions/Make"
        },
        "generations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Generation"
          }
        },
        "vehicles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Vehicle"
          }
        }
      }
    },
    "CreateModel": {
      "required": [
        "name",
        "make"
      ],
      "properties": {
        "name": { "$ref": "#/definitions/Model/properties/name" },
        "make": { "type": "integer" },
        "generations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CreateGeneration"
          }
        }
      }
    },
    "Generation": {
      "required": [
        "name",
        "yearBegin",
        "yearEnd"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "yearBegin": {
          "type": "number"
        },
        "yearEnd": {
          "type": "number"
        },
        "series": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Series"
          }
        }
      }
    },
    "CreateGeneration": {
      "required": [
        "name",
        "yearBegin",
        "yearEnd"
      ],
      "properties": {
        "name": { "$ref": "#/definitions/Generation/properties/name" },
        "yearBegin": { "$ref": "#/definitions/Generation/properties/yearBegin" },
        "yearEnd": { "$ref": "#/definitions/Generation/properties/yearEnd" },
        "series": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CreateSeries"
          }
        }
      }
    },
    "Series": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "specification": {
          "description": "The series's specification object.",
          "$ref": "#/definitions/Specification"
        },
        "generations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Generation"
          }
        }
      }
    },
    "CreateSeries": {
      "required": [
        "name"
      ],
      "properties": {
        "name": { "$ref": "#/definitions/Specification/properties/engine" },
        "specification": { "$ref": "#/definitions/CreateSpecification" }
      }
    },
    "Specification": {
      "required": [
        "series"
      ],
      "properties": {
        "engine": {
          "type": "string"
        },
        "enginePower": {
          "type": "number"
        },
        "gearType": {
          "type": "number"
        },
        "numberOfGears": {
          "type": "number"
        },
        "numberOfWheels": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "length": {
          "type": "number"
        },
        "seatingCapacity": {
          "type": "number"
        },
        "maxSpeed": {
          "type": "number"
        },
        "fullWeight": {
          "type": "number"
        },
        "fuelCapacity": {
          "type": "number"
        },
        "fuelConsumption": {
          "type": "number"
        },
        "series": {
          "$ref": "#/definitions/Series"
        }
      }
    },
    "CreateSpecification": {
      "properties": {
        "engine": { "$ref": "#/definitions/Specification/properties/engine" },
        "enginePower": { "$ref": "#/definitions/Specification/properties/enginePower" },
        "gearType": { "$ref": "#/definitions/Specification/properties/gearType" },
        "numberOfGears": { "$ref": "#/definitions/Specification/properties/numberOfGears" },
        "numberOfWheels": { "$ref": "#/definitions/Specification/properties/numberOfWheels" },
        "width": { "$ref": "#/definitions/Specification/properties/width" },
        "length": { "$ref": "#/definitions/Specification/properties/length" },
        "seatingCapacity": { "$ref": "#/definitions/Specification/properties/seatingCapacity" },
        "maxSpeed": { "$ref": "#/definitions/Specification/properties/maxSpeed" },
        "fullWeight": { "$ref": "#/definitions/Specification/properties/fullWeight" },
        "fuelCapacity": { "$ref": "#/definitions/Specification/properties/fuelCapacity" },
        "fuelConsumption": { "$ref": "#/definitions/Specification/properties/fuelConsumption" }
      }
    },
    "City": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "postalCode": {
          "type": "integer"
        }
      }
    },
    "Country": {
      "required": [
        "isoCode",
        "name"
      ],
      "properties": {
        "isoCode": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Address": {
      "required": [
        "country",
        "city",
        "street"
      ],
      "properties": {
        "country": {
          "$ref": "#/definitions/Country"
        },
        "city": {
          "$ref": "#/definitions/City"
        },
        "street": {
          "type": "string"
        }
      }
    },
    "CreateAddress": {
      "required": [
        "country",
        "city",
        "street"
      ],
      "properties": {
        "country": {
          "type": "integer"
        },
        "city": {
          "type": "integer"
        },
        "street": {
          "type": "string"
        }
      }
    },
    "Dealership": {
      "required": [
        "name",
        "user",
        "address"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "address": {
          "$ref": "#/definitions/Address"
        },
        "vehicles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Vehicle"
          }
        }
      }
    },
    "CreateDealership": {
      "required": [
        "name",
        "address"
      ],
      "properties": {
        "name": { "$ref": "#/definitions/Dealership/properties/name" },
        "address": { "$ref": "#/definitions/CreateAddress" }
      }
    },
    "Vehicle": {
      "required": [
        "vehicleType",
        "image",
        "model"
      ],
      "properties": {
        "vehicleType": {
          "type": "integer"
        },
        "price": {
          "type": "number"
        },
        "isServiced": {
          "type": "boolean"
        },
        "image": {
          "type": "string"
        },
        "model": {
          "$ref": "#/definitions/Model"
        },
        "generation": {
          "$ref": "#/definitions/Generation"
        },
        "series": {
          "$ref": "#/definitions/Series"
        },
        "dealership": {
          "$ref": "#/definitions/Dealership"
        }
      }
    },
    "CreateVehicle": {
      "required": [
        "vehicleType",
        "image",
        "model",
        "generation",
        "series"
      ],
      "properties": {
        "vehicleType": { "$ref": "#/definitions/Vehicle/properties/vehicleType" },
        "price": { "$ref": "#/definitions/Vehicle/properties/price" },
        "isServiced": { "$ref": "#/definitions/Vehicle/properties/isServiced" },
        "image": { "$ref": "#/definitions/Vehicle/properties/image" },
        "model": { "type": "integer" },
        "generation": { "type": "integer" },
        "series": { "type": "integer" },
        "dealership": { "type": "integer" }
      }
    },
    "Message": {
      "properties": {
        "type": {
          "type": "string"
        },
        "messages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}